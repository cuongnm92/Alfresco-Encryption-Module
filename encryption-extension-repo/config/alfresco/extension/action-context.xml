<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
	<bean id="set-encrypted-flag" class="com.extendedencryption.action.executer.SetEncryptedFlag" parent="action-executer">
		<property name="nodeService">
			<ref bean="NodeService" />
		</property>
	</bean>

    <bean id="enable-encrypted-flag" class="com.extendedencryption.action.executer.EnableEncryptedFlag" parent="set-encrypted-flag">
        <property name="publicAction">
            <value>false</value>
        </property>
    </bean>

    <bean id="disable-encrypted-flag" class="com.extendedencryption.action.executer.DisableEncryptedFlag" parent="set-encrypted-flag">
        <property name="publicAction">                                              
            <value>false</value>
        </property>
    </bean>

 	<bean id="encryption-action" class="com.extendedencryption.action.executer.EncryptionActionExecuter" parent="action-executer">
		<property name="nodeService">
			<ref bean="NodeService" />
		</property>
	</bean>

	<bean id="decryption-action" class="com.extendedencryption.action.executer.DecryptionActionExecuter" parent="action-executer">
		<property name="nodeService">
			<ref bean="NodeService" />
		</property>
	</bean>  
		
	<bean id="extendedencryption.actionResourceBundles" parent="actionResourceBundles">
		<property name="resourceBundles">
			<list>
				<value>alfresco.extension.messages.encryptionactions</value>
			</list>
		</property>
	</bean>
</beans>