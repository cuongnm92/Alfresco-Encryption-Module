<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
	<bean id="set-web-flag" class="org.alfresco.extendedencryption.aeem.SetWebFlag" parent="action-executer">
		<property name="nodeService">
			<ref bean="NodeService" />
		</property>
	</bean>

    <bean id="enable-web-flag" class="org.alfresco.extendedencryption.aeem.EnableWebFlag" parent="set-web-flag">
        <property name="publicAction">
            <value>false</value>
        </property>
    </bean>

    <bean id="disable-web-flag" class="org.alfresco.extendedencryption.aeem.DisableWebFlag" parent="set-web-flag">
        <property name="publicAction">
            <value>false</value>
        </property>
    </bean>

	<bean id="encryption" class="org.alfresco.extendedencryption.aeem.EncryptionActionExecuter" parent="action-executer">
		<property name="nodeService">
			<ref bean="NodeService" />
		</property>
	</bean>

	<bean id="encryption.actionResourceBundles" parent="actionResourceBundles">
		<property name="resourceBundles">
			<list>
				<value>alfresco.extension.messages.encryptionactions</value>
			</list>
		</property>
	</bean>
</beans>